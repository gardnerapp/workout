<div>
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
          <button id=”addLift” class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-full">Add another lift</button>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= simple_form_for @daily_workout do |f| %>
        <%= f.input :focus, class: "focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300" %>
        <%= f.simple_fields_for :workouts do |w| %>
          <div id='fieldsetContainer'>
            <fieldset id="0">
              <%= w.input :lift %>
              <%= w.input :sets %>
              <%= w.input :reps %>
            </fieldset>
          </div>
        <% end %>
        <%= f.button :submit, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
      <% end %>
    </div>
  </div>
</div>