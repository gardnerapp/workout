<div class="py-12 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <h2 class="text-base text-indigo-600 font-semibold tracking-wide uppercase">Julio's Online Workout Catalog</h2>
      <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
        The Latest Fitness Tips & Health Tricks
      </p>
      <p class="mt-4 max-w-2xl lg:mx-auto">
        <%= link_to "Add A Video", new_video_path, class: "inline-flex items-center justify-center px-5 py-3 border
         border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
      </p>
    </div>
    <div class="mt-10 flex items-center justify-center">
      <dl class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
        <% @videos.each do |video| %>
          <%= link_to video_path(video) do %>
            <div
              class="col-span-1 flex flex-col items-center
          relative bg-gray-100 py-3 px-3 rounded-3xl w-64 my-4 shadow-xl">
              <div class="rounded-lg mt-5">
                <%= video_tag url_for(video.video) %>
              </div>
              <div>
                <div class="py-5 px-5 text-center">
                  <span class="font-bold text-indigo-600 text-center text-lg"><%= video.title %></span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </dl>
    </div>
  </div>
</div>

